@page "{id}"
@model MyEshop_Clean.MVC.Pages.Admin.Products.EditModel
@{
}

<h1>ویرایش کالا</h1>
<hr />
<form method="post" enctype="multipart/form-data">
	<dl class="dl-horizontal">
		<dd><label asp-for="product.Name"></label></dd>
		<input type="hidden" asp-for="product.Id"/>
		<input type="hidden" asp-for="product.Item.Id"/>
		<dt>
			<input asp-for="product.Name" class="form-control" />
			<span asp-validation-for="product.Name"></span>
		</dt>
		<dd><label asp-for="product.Description"></label></dd>
		<dt>
			<textarea asp-for="product.Description" class="form-control"></textarea>
			<span asp-validation-for="product.Description"></span>
		</dt>
		<dd><label asp-for="product.Price"></label></dd>
		<dt>
			<input asp-for="product.Item.Price" class="form-control" />
			<span asp-validation-for="product.Item.Price"></span>
		</dt>
		<dd><label asp-for="product.Item.QuantityInStock"></label></dd>
		<dt>
			<input asp-for="product.Item.QuantityInStock" class="form-control" />
			<span asp-validation-for="product.QuantityInStock"></span>
		</dt>
		<dd><label asp-for="product.Picture"></label></dd>
		<div class="mb-3">
			<label for="file" class="form-label">تصاوير محصول</label>
			<input class="form-control" type="file" id="file" name="file" />
		</div>
		<dd>گروه</dd>
		<dt>
			@if (Model.product.Categories != null)
			{
				foreach (var item in Model.product.Categories)
				{
					<p>
						<input type="checkbox" name="selectedGroups" value="@item.Id"/> @item.Name
					</p>
				}
			}
		</dt>
		<dd></dd>
		<dt>
			<input type="submit" class="btn btn-success" value="ثبت" />
		</dt>
	</dl>
</form>
